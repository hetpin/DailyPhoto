<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/caldroid_lighter_gray" >

    <TextView
        android:id="@+id/about_1"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/caldroid_white"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/cell_red"
        android:textSize="20sp"
        android:textStyle="normal"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/about_2"
        android:layout_width="fill_parent"
        android:layout_height="90dip"
        android:layout_below="@+id/about_1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/about_2"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/about_text"
            android:textColor="@color/caldroid_darker_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/about_3"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:background="@color/caldroid_white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_rate"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:onClick="onClick"
            android:background="@drawable/selector_cell_transparent_blueopacity"
            android:text="RATE US"
            android:textColor="@color/cell_red" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/about_3"
        android:layout_marginBottom="5dip"
        android:gravity="center"
        android:text="@string/about_text_design"
        android:textColor="@color/caldroid_darker_gray" />

</RelativeLayout>